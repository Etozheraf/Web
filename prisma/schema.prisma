generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String

  Request  Request[]
}

model Category {
  id          Int          @id @default(autoincrement())
  name        String       @unique

  internships Internship[]
}

model Tag {
  id          Int          @id @default(autoincrement())
  name        String       @unique

  internships Internship[]
}

model Internship {
  id         Int     @id @default(autoincrement())
  name       String  @unique
  date       String
  imgUrl     String
  companyUrl String
  closed     Boolean

  category   Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int
  tags       Tag[]
  Request    Request[]
}

model Request {
  id           Int        @id @default(autoincrement())
  name         String
  status       Status
  date         String

  internship   Internship @relation(fields: [internshipId], references: [id], onDelete: Cascade)
  internshipId Int
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int
}

enum Status {
  Active
  Closed
}
